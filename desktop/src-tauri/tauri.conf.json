{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Roura Agent",
  "version": "3.0.0",
  "identifier": "io.roura.agent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Roura Agent",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "transparent": false,
        "decorations": true,
        "alwaysOnTop": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAssetCspModification": false
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "updater"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../resources/*"],
    "category": "DeveloperTool",
    "shortDescription": "AI-powered coding assistant",
    "longDescription": "Roura Agent is a local-first AI coding assistant that helps you write better code faster.",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": null,
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "timestampUrl": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": []
    },
    "fs": {
      "scope": ["$HOME/.config/roura-agent/**", "$TEMP/**"]
    },
    "clipboard": {
      "all": true
    },
    "dialog": {
      "all": true
    },
    "notification": {
      "all": true
    },
    "process": {},
    "updater": {
      "active": true,
      "pubkey": "PLACEHOLDER_PUBKEY",
      "endpoints": [
        "https://releases.roura.io/{{target}}/{{arch}}/{{current_version}}"
      ]
    }
  }
}
